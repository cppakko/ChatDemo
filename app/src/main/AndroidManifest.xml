<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="xyz.akko.projectchat">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProjectChat">
        <activity
            android:name=".views.ui.addPage.AddSearchActivity"
            android:exported="true"
            android:label="@string/title_activity_add_search"
            android:theme="@style/Theme.ProjectChat.NoActionBar" />
        <activity
            android:name=".views.ui.friendslist.FriendsList"
            android:exported="true"
            android:label="@string/title_activity_friends_list"
            android:theme="@style/Theme.ProjectChat.NoActionBar" />
        <activity
            android:name=".views.ui.setting.Setting"
            android:exported="true"
            android:label="@string/title_activity_setting"
            android:theme="@style/Theme.ProjectChat.NoActionBar" />
        <activity
            android:name=".views.ui.conversation.ConversationView"
            android:exported="true"
            android:label="@string/title_activity_conversation_view"
            android:theme="@style/Theme.ProjectChat.NoActionBar" />
        <activity
            android:name=".views.ui.mainScreen.MainScreen"
            android:exported="true"
            android:label="@string/title_activity_chat_main"
            android:theme="@style/Theme.ProjectChat.NoActionBar" />
        <activity
            android:name=".views.ui.login.LoginActivity"
            android:exported="true"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.ProjectChat.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ProjectChat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>